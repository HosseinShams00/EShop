@page 
@model ServiceHost.Areas.Admin.Pages.Shop.Products.EditModel
@{
}


<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="card p-4 col-12" id="preview">
            <h6 class="d-block">پیش نمایش عکس</h6>
            <img class="mb-3 mt-3 w-100 border-radius-2xl shadow-lg" src="~/Pictures/@Model.Command.Picture/large.jpeg" />
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>نام محصول</label>
                <input type="text" placeholder="نام محصول" class="form-control" onfocusout="slugify(this.value)" asp-for="Command.Name" />
                <span asp-validation-for="Command.Name" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Slug</label>
                <input type="text" placeholder="slug" class="form-control" id="Slug" asp-for="Command.Slug" />
                <span asp-validation-for="Command.Name" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Keywords</label>
                <input type="text" placeholder="Keywords" class="form-control" asp-for="Command.Keywords" />
                <span asp-validation-for="Command.Keywords" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>مسیر عکس</label>
                <input type="file" placeholder="مسیر عکس" class="form-control" onfocusout="ImagePreviewer(this,'preview')" asp-for="PictureFile" />
                <span asp-validation-for="PictureFile" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>alt عکس</label>
                <input type="text" placeholder="alt عکس" class="form-control" asp-for="Command.PictureAlt" />
                <span asp-validation-for="Command.PictureAlt" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>تایتل عکس</label>
                <input type="text" placeholder="تایتل عکس" class="form-control" asp-for="Command.PictureTitle" />
                <span asp-validation-for="Command.PictureTitle" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Meta Description</label>
                <input type="text" placeholder="Meta Description" class="form-control" asp-for="Command.MetaDescription" />
                <span asp-validation-for="Command.MetaDescription" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="exampleFormControlSelect1">دسته بندی ها</label>
                <select class="form-control" id="exampleFormControlSelect1" asp-for="Command.ProductCategoryId" asp-items='@new SelectList(Model.ProductCategories,"Id","Name")'>
                    <option value="0">یک دسته بندی انتخاب کنید</option>
                </select>
                <span asp-validation-for="Command.ProductCategoryId" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>توضیحات محصول</label>
                <textarea asp-for="Command.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Command.Description" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>توضیحات کوتاه از محصول</label>
                <textarea asp-for="Command.ShortDecription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Command.ShortDecription" class="text-danger text-sm"></span>
            </div>
        </div>
 
        <input type="hidden" asp-for="Command.Id" />
        <input type="hidden" asp-for="Command.Picture" />
        <button type="submit" class="btn bg-gradient-success">تایید</button>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/site.js"></script>
}