@page
@model ServiceHost.Areas.Admin.Pages.Shop.CustomerDiscounts.CreateModel
@{
}

<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>سر تیتر تخفیف</label>
                <input type="text" placeholder="سر تیتر تخفیف" class="form-control" asp-for="_Command.Title" />
                <span asp-validation-for="_Command.Title" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>تاریخ شروع</label>
                <input type="datetime-local" class="form-control" asp-for="_Command.StartDateTime" />
                <span asp-validation-for="_Command.StartDateTime" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>تاریخ پایان</label>
                <input type="datetime-local" class="form-control" asp-for="_Command.EndDateTime" />
                <span asp-validation-for="_Command.EndDateTime" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>مقدار تخفیف</label>
                <input type="text" placeholder="مقدار تخفیف" class="form-control" asp-for="_Command.DiscountPercent" />
                <span asp-validation-for="_Command.DiscountPercent" class="text-danger text-sm"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>توضیحات تخفیف</label>
                <textarea asp-for="_Command.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="_Command.Description" class="text-danger text-sm"></span>
            </div>
        </div>

        <button type="submit" class="btn bg-gradient-success">تایید</button>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}