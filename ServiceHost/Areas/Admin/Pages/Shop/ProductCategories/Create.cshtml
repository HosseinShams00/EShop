@page
@model ServiceHost.Areas.Admin.Pages.Shop.ProductCategories.CreateModel
@{
}

<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>نام دسته بندی</label>
                <input type="text" placeholder="نام دسته بندی" class="form-control" onfocusout="slugify(this.value)" asp-for="createProductCategory.Name" />
                <span asp-validation-for="createProductCategory.Name" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>slug</label>
                <input type="text" placeholder="slug" class="form-control" id="Slug" asp-for="createProductCategory.Slug" />
                <span asp-validation-for="createProductCategory.Slug" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Keywords</label>
                <input type="text" placeholder="Keywords" class="form-control" asp-for="createProductCategory.Keywords" />
                <span asp-validation-for="createProductCategory.Keywords" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>مسیر عکس</label>
                <input type="text" onfocusout="ImagePreviewer(this.value,'preview')" placeholder="مسیر عکس" class="form-control" asp-for="createProductCategory.Picture" />
                <span asp-validation-for="createProductCategory.Picture" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>alt عکس</label>
                <input type="text" placeholder="alt عکس" class="form-control" asp-for="createProductCategory.PictureAlt" />
                <span asp-validation-for="createProductCategory.PictureAlt" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>تایتل عکس</label>
                <input type="text" placeholder="تایتل عکس" class="form-control" asp-for="createProductCategory.PictureTitle" />
                <span asp-validation-for="createProductCategory.PictureTitle" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Meta Description</label>
                <input type="text" placeholder="Meta Description" class="form-control" asp-for="createProductCategory.MetaDescription" />
                <span asp-validation-for="createProductCategory.MetaDescription" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>توضیحات دسته بندی</label>
                <textarea asp-for="createProductCategory.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="createProductCategory.Description" class="text-danger text-sm"></span>
            </div>
        </div>

        <div class="d-none" id="preview">
            <label class="d-block">پیش نمایش عکس</label>
            <img class="mb-3 mt-3" />
        </div>

        <button type="submit" class="btn bg-gradient-success">تایید</button>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/site.js"></script>
}