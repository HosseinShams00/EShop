@page
@model ServiceHost.Areas.Admin.Pages.Shop.Sliders.EditModel
@{
}

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="card p-4 col-12" id="preview">
            <h6 class="d-block">پیش نمایش عکس</h6>
            <img class="mb-3 mt-3 w-100 border-radius-2xl shadow-lg" src="~/Pictures/@Model.Command.PicturePath/large.jpeg" />
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>مسیر عکس</label>
                <input type="file" placeholder="مسیر عکس" onfocusout="ImagePreviewer(this,'preview')" class="form-control" asp-for="PictureFile" />
                <span asp-validation-for="PictureFile" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>alt عکس</label>
                <input type="text" placeholder="alt عکس" class="form-control" asp-for="Command.PictureAlt" />
                <span asp-validation-for="Command.PictureAlt" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>تایتل عکس</label>
                <input type="text" placeholder="تایتل عکس" class="form-control" asp-for="Command.PictureTitle" />
                <span asp-validation-for="Command.PictureTitle" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>سر تیتر</label>
                <input type="text" placeholder="سر تیتر" class="form-control" asp-for="Command.Heading" />
                <span asp-validation-for="Command.Heading" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>تایتل</label>
                <input type="text" placeholder="تایتل" class="form-control" asp-for="Command.Title" />
                <span asp-validation-for="Command.Title" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>متن بدنه</label>
                <input type="text" placeholder="متن بدنه" class="form-control" asp-for="Command.BodyText" />
                <span asp-validation-for="Command.BodyText" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>متن دکمه</label>
                <input type="text" placeholder="متن دکمه" class="form-control" asp-for="Command.ButtonText" />
                <span asp-validation-for="Command.ButtonText" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>لینک اسلایدر</label>
                <input type="text" placeholder="لینک اسلایدر" class="form-control" asp-for="Command.RedirectUrl" />
                <span asp-validation-for="Command.RedirectUrl" class="text-danger text-sm"></span>
            </div>
        </div>

        <input type="hidden" asp-for="Command.Id" />
        <input type="hidden" asp-for="Command.PicturePath" />
        <button type="submit" class="btn bg-gradient-success">تایید</button>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/site.js"></script>
}