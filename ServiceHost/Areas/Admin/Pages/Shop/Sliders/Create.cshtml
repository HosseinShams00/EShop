@page
@model ServiceHost.Areas.Admin.Pages.Shop.Sliders.CreateModel
@{
}

<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <input type="text" placeholder="ادرس عکس" class="form-control" asp-for="createSlider.PicturePath" />
                <span asp-validation-for="createSlider.PicturePath" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input type="text" placeholder="alt عکس" class="form-control" asp-for="createSlider.PictureAlt" />
                <span asp-validation-for="createSlider.PictureAlt" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input type="text" placeholder="تایتل عکس" class="form-control" asp-for="createSlider.PictureTitle" />
                <span asp-validation-for="createSlider.PictureTitle" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input type="text" placeholder="سر تیتر" class="form-control" asp-for="createSlider.Heading" />
                <span asp-validation-for="createSlider.Heading" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input type="text" placeholder="تایتل" class="form-control" asp-for="createSlider.Title" />
                <span asp-validation-for="createSlider.Title" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input type="text" placeholder="متن بدنه" class="form-control" asp-for="createSlider.BodyText" />
                <span asp-validation-for="createSlider.BodyText" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input type="text" placeholder="متن دکمه" class="form-control" asp-for="createSlider.ButtonText" />
                <span asp-validation-for="createSlider.ButtonText" class="text-danger text-sm"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input type="text" placeholder="لینک اسلایدر" class="form-control" asp-for="createSlider.RedirectUrl" />
                <span asp-validation-for="createSlider.RedirectUrl" class="text-danger text-sm"></span>
            </div>
        </div>
        <button type="submit" class="btn bg-gradient-success">تایید</button>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}